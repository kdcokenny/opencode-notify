{
  "$schema": "https://ocx.kdco.dev/schema/registry.json",
  "name": "kdco-notify",
  "description": "Native OS notifications for OpenCode - know when tasks complete",
  "components": [
    {
      "name": "kdco-notify",
      "description": "Native desktop notifications with terminal detection, focus awareness, and dark mode support",
      "type": "ocx:plugin",
      "files": [
        {
          "path": "src/plugin/kdco-notify.ts",
          "target": "plugin/kdco-notify.ts"
        },
        {
          "path": "src/plugin/assets/opencode-icon-dark.png",
          "target": "plugin/assets/opencode-icon-dark.png"
        },
        {
          "path": "src/plugin/assets/opencode-icon-light.png",
          "target": "plugin/assets/opencode-icon-light.png"
        }
      ],
      "npmDependencies": ["node-notifier", "detect-terminal"]
    }
  ]
}
